---
const navLinks = [
    { name: 'Inicio', href: '/' },
    { name: 'Nosotros', href: '/nosotros' },
    { name: 'Productos', href: '/productos' },
    { name: 'E-Commerce', href: '#', isHighlighted: true },
];
---
<header class="bg-white/90 backdrop-blur-md sticky top-0 z-50">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-gray-800">
                <img src="/logo.svg" alt="Servicios & Sistemas Logo" class="h-10 w-auto">
                <!-- Placeholder. Reemplazar con <img src="/logo.svg" ...> cuando el asset esté disponible -->
            </a>

            <!-- Right side container -->
            <div class="hidden md:flex items-center space-x-6">
                <!-- Navegación Principal -->
                <nav class="flex items-center space-x-6">
                    {navLinks.map(link => (
                        <a 
                            href={link.href} 
                            class:list={[
                                "text-gray-600 hover:text-brand-blue transition-colors duration-300",
                                { "text-white bg-brand-blue px-3 py-1 rounded-md": link.isHighlighted }
                            ]}
                        >
                            {link.name}
                        </a>
                    ))}
                </nav>

                <!-- Botón Soporte -->
                <a href="/soporte" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600 transition-colors duration-300">
                    Soporte
                </a>
            </div>

            <!-- Menú Móvil (Hamburguesa) -->
            <div class="md:hidden">
                <button class="text-gray-800 focus:outline-none">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path></svg>
                </button>
            </div>
        </div>
    </div>
</header> 